pipeline {
    agent any

    environment {
        DOTNET_HOME = tool 'dotnetsdk'
        PATH = "${env.DOTNET_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out your source code repository
                checkout([$class: 'GitSCM', branches: [[name: 'main']], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: '']], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/khaledgomaa/aspjenkinspipeline.git']]])
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build using the .NET CLI
                    sh '/var/jenkins_home/tools/io.jenkins.plugins.dotnet.DotNetSDK/dotnetsdk/dotnet build'
                }
            }
        }
        // Add more stages as needed, such as deployment or additional testing
    }
}
