pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out your source code repository
                // For example, using Git
                git 'https://github.com/khaledgomaa/aspjenkinspipeline.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Use the 'withDotNet' step to manage the .NET SDK installation
                    withDotNet(installationName: 'dotnet-sdk') {
                        sh 'dotnet restore'
                        sh 'dotnet build'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run tests
                    sh 'dotnet test'
                }
            }
        }

        // Add more stages as needed, such as deployment or additional testing
    }
}
